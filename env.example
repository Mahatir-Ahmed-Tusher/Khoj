# Environment variables for Khoj Fact Checking Platform

# Tavily API Key for search and crawling
TAVILY_API_KEY=your_tavily_api_key_here

# OpenRouter API Key for DeepSeek AI (primary)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google Gemini AI API Key for fact-checking reports (secondary)
GEMINI_API_KEY=your_gemini_api_key_here

# GROQ API Key for GPT-OSS-20B (tertiary fallback)
GROQ_API_KEY=your_groq_api_key_here

# Sightengine API Keys for AI Image Detection
SIGHTENGINE_API_USER=your_sightengine_api_user_here
SIGHTENGINE_API_SECRET=your_sightengine_api_secret_here

# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
